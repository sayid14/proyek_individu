<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tutorial"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#113CFC"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="HOME"
        android:textStyle="bold"
        android:textSize="23sp"/>
    <ImageView
        android:id="@+id/img8"
        android:layout_below="@+id/tutorial"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/home"/>

    <TextView
        android:id="@+id/tex9"
        android:layout_below="@id/img8"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PILIHAN HOTEL TERBAIK - DISKON HINGGA 80%"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tex10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tex9"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="20sp"
        android:text="REKOMENDASI KOS"/>
    <ImageView
        android:id="@+id/img0"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tex10"
        android:src="@drawable/kos5"/>

        <ImageView
            android:id="@+id/img11"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/img0"
            android:layout_marginTop="20dp"
            android:src="@drawable/kos3"/>
    </RelativeLayout>



</ScrollView>